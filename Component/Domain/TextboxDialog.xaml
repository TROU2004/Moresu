<UserControl x:Class="Moresu.Component.Domain.TextboxDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Moresu.Component.Domain"
             mc:Ignorable="d" >
    <StackPanel Width="250">
        <TextBlock HorizontalAlignment="Center" x:Name="textBlock_Message" Margin="10" FontSize="14" Grid.Row="0" ></TextBlock>
        <TextBox Width="150" Name="textBox" FontSize="15px" Margin="10,0,0,0" Style="{StaticResource MaterialDesignTextBox}"/>
        <Button Grid.Row="2" IsDefault="True" Style="{DynamicResource MaterialDesignFlatButton}" HorizontalAlignment="Right" Margin="16" Cursor="Hand" Click="Button_Click">
            确认
        </Button>
    </StackPanel>
</UserControl>

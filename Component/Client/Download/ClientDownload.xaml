<UserControl x:Class="Moresu.Component.Client.Download.ClientDownload"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Name="ClientDL"
             d:DesignHeight="200" d:DesignWidth="600">
    <StackPanel Margin="10">
        <TextBlock Margin="10,10,0,5" Style="{StaticResource MaterialDesignHeadline4TextBlock}">请稍后.....</TextBlock>
        <TextBlock x:Name="textBlock_Link" FontSize="16" Margin="10,10,0,0" >从这里获取文件中</TextBlock>
        <ProgressBar Margin="10,20,10,0" Height="25" x:Name="progressBar" Value="0" materialDesign:TransitionAssist.DisableTransitions="True" />
        <TextBlock FontSize="16" x:Name="textBlock_State" Margin="400,5,10,0"></TextBlock>
    </StackPanel>
</UserControl>
